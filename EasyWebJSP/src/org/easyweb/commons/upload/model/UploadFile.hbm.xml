<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.easyweb.commons.upload.model.UploadFile" table="file" lazy="false">
		<id name="id" type="string">
			<column name="ID"/>
			<generator class="assigned"/>
		</id>
				
		<property name="fileName" type="string">
			<column name="FILE_NAME"/>
		</property>
				
		<property name="fileType" type="string">
			<column name="FILE_TYPE"/>
		</property>
				
		<property name="fileContent" type="org.springframework.orm.hibernate3.support.BlobByteArrayType">
			<column name="FILE_CONTENT"/>
		</property>
				
		<property name="fileContentType" type="string">
			<column name="FILE_CONTENT_TYPE"/>
		</property>
				
		<property name="fileSize" type="long">
			<column name="FILE_SIZE"/>
		</property>
		
		<property name="updateTime" type="date">
			<column name="UPDATE_TIME"/>
		</property>
		
	</class>
</hibernate-mapping>
