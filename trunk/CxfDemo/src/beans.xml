<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	
	<bean id="hello" class="org.cxf.demo.HelloWorldImpl" />
	<bean id="bye" class="org.cxf.demo.ByeWorldImpl"/>
	<jaxws:endpoint id="helloWorld" implementor="#hello" address="/HelloWorld" />
	<jaxws:endpoint id="byeWorld" implementor="#bye" address="/ByeWorld"/>
	
	<jaxws:client id="helloClient" serviceClass="org.cxf.demo.HelloWorld" address="http://localhost:8080/CxfDemo/HelloWorld" />
	<jaxws:client id="byeClient" serviceClass="org.cxf.demo.ByeWorld" address="http://localhost:8080/CxfDemo/ByeWorld"/>
</beans>
