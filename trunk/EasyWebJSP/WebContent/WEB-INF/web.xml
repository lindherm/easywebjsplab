<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<description>J2EE Framework</description>
	<display-name>projectname</display-name>
	<!-- filters -->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>*.box</url-pattern>
	</filter-mapping>
	<!-- SpringMVC -->
	<servlet>
		<servlet-name>springmvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/boxmvc-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>*.box</url-pattern>
	</servlet-mapping>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/box_config.xml</param-value>
	</context-param>
	<!-- default session configuration -->
	<session-config>
		<session-timeout>500</session-timeout>
	</session-config>
	<!-- default welcome files -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!-- taglib -->
	<jsp-config>
		<taglib>
			<taglib-uri>http://www.boxfmk.org.cn/form</taglib-uri>
			<taglib-location>/WEB-INF/tld/form_tag.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.boxfmk.org.cn/ui</taglib-uri>
			<taglib-location>/WEB-INF/tld/ui_tag.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.atg.com/taglibs/json</taglib-uri>
			<taglib-location>/WEB-INF/tld/json.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
